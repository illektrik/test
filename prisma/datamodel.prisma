type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  content: String!
  author: User!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  posts: [Post!]!
  products: [Product!]!
}

type Product {
  id: ID! @id
  name: String!
  pictureUrl: String!
  price: Float!
  seller: User!
}